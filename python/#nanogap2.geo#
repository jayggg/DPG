algebraic3d

# units of micrometers

# w = 10 nm
# Al2O3 thickness = 300 nm

# Include vacuum region below glass

solid air2alox  = plane (0, 0, 0.450; 0, 0, 1);
solid gold2alox = plane (0, 0, 0.150; 0, 0,-1);

solid glass2gold = plane (0, 0, 0; 0, 0, -1);



solid xneg = plane (-25,   0, 0; -1,  0, 0) -bc=1;
solid xpos = plane ( 25,   0, 0;  1,  0, 0) -bc=1;
solid yneg = plane (  0, -25, 0;  0, -1, 0) -bc=1;
solid ypos = plane (  0,  25, 0;  0,  1, 0) -bc=1;
solid zneg = plane (0, 0, -100;  0, 0, -1) -bc=2;
solid zpos = plane (0, 0,  100;  0, 0,  1) -bc=3;

solid air_above = orthobrick(-25, -25, 0.450; 25, 25, 100) and xneg and xpos and yneg and ypos;

solid alox_film = orthobrick(-25, -25, 0.150; 25, 25, 0.450) and air2alox and gold2alox and xneg and xpos and yneg and ypos;

solid gold_film = orthobrick(-25, -25, 0; 25, 25, 0.150) and (not gold2alox) and glass2gold and xneg and xpos and yneg and ypos;

solid glass = orthobrick(-25, -25, -0.1; 25, 25, 0) and xneg and xpos and yneg and ypos;

solid air_below = orthobrick(-25, -25, -200; 25, 25, -0.1) and xneg and xpos and yneg and ypos;

# 
solid nanogap = cylinder (0, 0, 0; 0, 0, 0.160; 16.5) and not cylinder (0, 0, 0; 0, 0, 0.160; 16) and glass2gold and plane (0, 0, 0.160; 0, 0, 1);

solid gold = gold_film and (not nanogap);
solid alox = alox_film and (not nanogap);

solid glass_near_nanogap = cylinder (0, 0, -0.01; 0, 0, 0; 16.5) and not cylinder (0, 0, -0.01; 0, 0, 0; 16) and (not glass2gold) and plane (0, 0, -0.01; 0, 0, -1);

solid glass_large_h = glass and (not glass_near_nanogap);

tlo air_above                                 -transparent -maxh=15;
tlo air_below                                 -transparent -maxh=15;
tlo alox                   -col=[1.0,0.0,3.0]              -maxh=15;
tlo nanogap                -col=[1.0,0.0,3.0]              -maxh=0.2;
tlo gold                   -col=[0.0,1.0,0.0] -transparent -maxh=15;
tlo glass_large_h          -col=[1.0,0.0,0.0] -transparent -maxh=15;
tlo glass_near_nanogap     -col=[1.0,0.0,0.0] -transparent -maxh=0.2;

identify periodic xneg xpos;
identify periodic yneg ypos;

identify closesurfaces glass2gold gold2alox;



